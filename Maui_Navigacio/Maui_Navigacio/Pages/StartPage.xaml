<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_Navigacio.Pages.StartPage"
             Title="StartPage">
    <VerticalStackLayout>
        <Label 
            Text="StartPage"
            FontSize="Header"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="startText" />
        
        <Entry Text="{Binding Szoveg}"/>

        <Button Text="Page2" VerticalOptions="Center" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
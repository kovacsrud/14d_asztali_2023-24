<Window x:Class="WpfIdozito.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfIdozito"
        mc:Ignorable="d"
        Title="Időzítő" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textblockA" FontSize="200" VerticalAlignment="Center" HorizontalAlignment="Center"  Text="A" />
        <TextBlock x:Name="textblockB" FontSize="200" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"  Text="B"/>
        <Button x:Name="buttonTimer" Content="Start" Width="150" Height="30" Grid.Row="1" FontSize="20" Grid.ColumnSpan="2" Click="buttonTimer_Click" />

    </Grid>
</Window>

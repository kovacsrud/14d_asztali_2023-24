<Window x:Class="WpfVizallas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVizallas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="datagridVizallasAdatok" IsReadOnly="True" ColumnWidth="*" MouseDoubleClick="datagridVizallasAdatok_MouseDoubleClick" />
        <Button x:Name="buttonKuld" Content="Új mérés" Width="100" Height="40" Grid.Row="1" Click="buttonKuld_Click"/>

    </Grid>
</Window>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBaseDb.MVVM.Views.BaseView"
             Title="Tankolás App" BackgroundColor="{StaticResource Sotet_1}">
    <VerticalStackLayout VerticalOptions="Center" >
        <Image Source="car_wash.png" Margin="0,0,0,20" WidthRequest="200"/>
        <Button x:Name="buttonAdatok" Text="Tankolás adatok" Margin="10,0,10,0" StyleClass="AlapButton" Clicked="buttonAdatok_Clicked"/>
        <Button x:Name="buttonUj" Text="Új tankolás" Margin="10,0,10,0" StyleClass="AlapButton" Clicked="buttonUj_Clicked"/>
        <Button x:Name="buttonDiagram" Text="Diagramok" Margin="10,0,10,0" StyleClass="AlapButton" Clicked="buttonDiagram_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSlider.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center" x:Name="layout">
            <Frame CornerRadius="25" HorizontalOptions="Center">
                <VerticalStackLayout Spacing="10" Padding="10">
              <Label x:Name="labelSlider" FontSize="Title"/>
              <Slider x:Name="sliderRed"  MinimumTrackColor="Red" ThumbColor="Red" Minimum="0" Maximum="1"  ValueChanged="sliderErtek_ValueChanged"/>
             <Slider x:Name="sliderGreen" MinimumTrackColor="Green" ThumbColor="Green" Minimum="0" Maximum="1" ValueChanged="sliderErtek_ValueChanged"/>
                <Slider x:Name="sliderBlue" MinimumTrackColor="Blue" ThumbColor="Blue" Minimum="0" Maximum="1" ValueChanged="sliderErtek_ValueChanged"/>
                    <Rectangle x:Name="rectangleColor" HeightRequest="200" BackgroundColor="Aquamarine" />

                    <Button x:Name="buttonRandom" Text="Random szín" Clicked="buttonRandom_Clicked"/>
                </VerticalStackLayout>
            </Frame>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

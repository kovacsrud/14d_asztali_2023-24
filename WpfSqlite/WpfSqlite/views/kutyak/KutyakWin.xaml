<Window x:Class="WpfSqlite.views.kutyak.KutyakWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSqlite.views.kutyak"
        mc:Ignorable="d"
        Title="Rendelési adatok" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="datagridKutya" ColumnWidth="*"/>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="buttonUjKutya" Margin="0,0,10,0" FontSize="25" Content="Új adat" />
            <Button x:Name="buttonTorolKutya" FontSize="25" Content="Kiválasztott törlése" />
        </WrapPanel>


    </Grid>
</Window>
